<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.taskmaster">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.TaskMaster">
        <activity android:name=".views.signIn">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".views.verification" />
        <activity android:name=".views.signUpPage">
        </activity>
        <activity
            android:name=".views.settingsPage"
            android:parentActivityName=".views.MainActivity" />
        <activity
            android:name=".views.TaskDetailsPage"
            android:parentActivityName=".views.MainActivity" />
        <activity
            android:name=".views.AddTaskPage"
            android:parentActivityName=".views.MainActivity" />
        <activity
            android:name=".views.allTasksPage"
            android:parentActivityName=".views.MainActivity" />
        <activity android:name=".views.MainActivity" />
    </application>

</manifest>